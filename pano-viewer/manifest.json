      "files": [
        {
          "name": "panorama",
          "accept": ["image/*", ".exr", ".hdr"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/pano-viewer/index-pro.html",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"],
        "image/x-exr": [".exr"],
        "image/vnd.radiance": [".hdr"]
      }
    }
  ]
