  "categories": ["productivity", "photo", "utilities"],
  "shortcuts": [
    {
      "name": "新建项目",
      "short_name": "新建",
      "description": "创建新的全景项目",
      "url": "/pano-viewer/index-pro.html?action=new",
      "icons": [
        {
          "src": "/pano-viewer/icon-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "上传图片",
